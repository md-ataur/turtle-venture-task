<div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" value="<%= station.name %>" name="name" required>
</div>
<div class="mb-3">
    <label for="postcode" class="form-label">Postcode</label>
    <input type="text" class="form-control" value="<%= station.postcode %>" name="postcode" required>
</div>
<div class="mb-3">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <a class="btn btn-secondary me-1" href="/profile">Back</a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>